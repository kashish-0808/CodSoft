#include<iostream>
#include<cstdlib>   
#include<ctime>

using namespace std;

int main() {
    int guess, number, attempts = 0;

    srand(time(0));  
    number = rand() % 100 + 1; 

    cout << "Hello! I'm Kashish ğŸ˜Š "<<endl;
cout << "Today, you have to guess the number I'm thinking! "<<endl;
cout << "It's between 1 and 100 â€” Ready? Let's go!"<<endl;


    do {
        cout << "Enter your guess: ";
        cin >> guess;
        attempts++;

        if (guess > number)
            cout << "Too high! Try again.\n";
        else if (guess < number)
            cout << "Too low! Try again.\n";
        else
            cout << "ğŸ‰ Congrats! You guessed it in " << attempts << " attempts.\n";

    } while (guess != number);

    return 0;
}
